@model FTMS.ViewModels.CourseCategoryViewModel
@{
	ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Courses", FormMethod.Post))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(p => p.Course.Id)
	<div class="form-group">
		@Html.LabelFor(p => p.Course.Name)
		@Html.EditorFor(p => p.Course.Name, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(p => p.Course.Name, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Course.Description)
		@Html.EditorFor(p => p.Course.Description, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(p => p.Course.Description, "", new { @class = "text-danger" })
	</div>
	<div class="form-group">
		@Html.LabelFor(p => p.Course.Category.Name)
		@Html.DropDownListFor(p => p.Course.CategoryID,
		 new SelectList(Model.Categories, "Id", "Name"),
		 "Select Category Name",
		 new { @class = "form-control" })
	</div>
	<button type="submit" class="btn btn-primary">Edit</button>
}

